<launch>

  <node pkg="mapviz" type="mapviz" name="mapviz"></node>

  <node pkg="swri_transform_util" type="initialize_origin.py" name="initialize_origin" >
    <param name="local_xy_frame" value="map"/>
    <param name="local_xy_origin" value="IIT-D"/>
    <rosparam param="local_xy_origins">
      [{ name: IIT-D,
         latitude: 28.545700,
         longitude: 77.192800,
         altitude: 200,
         heading: 0.0},
         
       { name: back_40,
         latitude: 29.447507,
         longitude: -98.629367,
         altitude: 200.0,
         heading: 0.0}]
    </rosparam>
  </node>

  <node pkg="tf" type="static_transform_publisher" name="swri_transform" args="0 0 0 0 0 0 /map /origin 100"  />
  <node pkg="tf" type="static_transform_publisher" name="map_transform" args="0 0 0 0 0 0 map map 100"  />



</launch>